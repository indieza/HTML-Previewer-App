@model CreateHtmlRecordInputModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">HTML Reviewer App</h1>
</div>
<form asp-area="" asp-controller="Home" asp-action="Index" method="post">
    <div class="form-group">
        <label asp-for="@this.Model.Html"></label>
        <textarea asp-for="@this.Model.Html" class="form-control" rows="10"></textarea>
        <span asp-validation-for="@this.Model.Html" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">
        Save
    </button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}