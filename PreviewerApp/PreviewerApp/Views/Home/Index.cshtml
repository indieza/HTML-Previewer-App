@model ICollection<HtmlRecordViewModel>

@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-md-12">
        <div class="text-center">
            <h3 class="display-4">HTML Reviewer App</h3>
        </div>
        <hr />
    </div>
</div>
<table id="htmlRecords" class="display hover row-border stripe sorting sorting_desc">
    <thead>
        <tr>
            <th>Created On</th>
            <th>Updated On</th>
            <th>Shareable URL</th>
            <th>HTML Record</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var htmlRecord in this.Model)
        {
            <tr>
                <td width="120px">
                    @htmlRecord.CreatedOn.ToLocalTime().ToString("dd-MM-yyyy")
                </td>
                <td width="120px">
                    @htmlRecord.UpdatedOn.ToLocalTime().ToString("dd-MM-yyyy")
                </td>
                <td width="130px">
                    <a href="@htmlRecord.ShareableUrl" target="_blank">
                        Link
                    </a>
                </td>
                <td width="400px">
                    <div style="max-height: 50px; overflow-y: scroll;">
                        @htmlRecord.Html
                    </div>
                </td>
                <td width="130px">
                    <button class="btn btn-info">
                        Edit
                    </button>
                    <button class="btn btn-success" onclick="window.open('@htmlRecord.ShareableUrl', '_blank')">
                        Preview
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>
<hr />

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}