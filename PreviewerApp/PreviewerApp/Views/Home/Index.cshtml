@model ICollection<HtmlRecordViewModel>

@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-md-12">
        <div class="text-center">
            <h3 class="display-4">HTML Reviewer App</h3>
        </div>
        <hr />
    </div>
</div>
<table id="htmlRecords" class="display hover row-border stripe sorting sorting_desc">
    <thead>
        <tr>
            <th>Created On</th>
            <th>Updated On</th>
            <th>Shareable URL</th>
            <th>HTML Record</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var htmlRecord in this.Model)
        {
            <tr>
                <td width="120px">
                    @htmlRecord.CreatedOn.ToLocalTime().ToString("dd-MM-yyyy")
                </td>
                <td width="120px">
                    @htmlRecord.UpdatedOn.ToLocalTime().ToString("dd-MM-yyyy")
                </td>
                <td width="130px">
                    <input type="button" class="btn btn-primary" value="Copy Link" onclick="CopyLink('@htmlRecord.ShareableUrl')" />
                </td>
                <td width="400px">
                    <div style="max-height: 50px; overflow-y: scroll;">
                        @htmlRecord.Html
                    </div>
                </td>
                <td width="222px">
                    <a asp-area="" asp-controller="EditHtmlRecord" asp-action="Index" asp-route-id="@htmlRecord.Id">
                        <input type="button" value="Edit" class="btn btn-info" />
                    </a>
                    <a href="@htmlRecord.ShareableUrl" target="_blank">
                        <input type="button" value="View" class="btn btn-success" />
                    </a>
                    <a data-target="#approveDeleteModal" data-toggle="modal">
                        <input type="button" value="Delete" class="btn btn-danger" />
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
<hr />

<div class="modal fade" id="approveDeleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Approve Delete Process</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Do you want to delete that HTML Record?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">NO</button>
                <form method="post">
                    <button type="submit" class="btn btn-primary">YES</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}